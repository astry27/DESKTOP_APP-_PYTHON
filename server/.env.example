# Path: server/.env.example

# =============================================================================
#                     ENVIRONMENT VARIABLES UNTUK SERVER
# =============================================================================
# Copy file ini ke .env dan sesuaikan dengan konfigurasi Anda
# File .env akan diabaikan oleh git untuk keamanan

# =============================================================================
#                           DATABASE CONFIGURATION
# =============================================================================
# Konfigurasi koneksi MySQL - hanya untuk server desktop
DB_HOST=localhost
DB_PORT=3306
DB_NAME=db_gereja_katolik
DB_USER=root
DB_PASSWORD=

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Database Charset
DB_CHARSET=utf8mb4

# =============================================================================
#                           SERVER CONFIGURATION
# =============================================================================
# Konfigurasi server HTTP internal untuk komunikasi dengan API Node.js
SERVER_HOST=0.0.0.0
SERVER_PORT=9000
SERVER_MAX_CONNECTIONS=100

# =============================================================================
#                             API CONFIGURATION
# =============================================================================
# Konfigurasi untuk komunikasi dengan API Node.js
API_HOST=localhost
API_PORT=3000

# =============================================================================
#                         APPLICATION CONFIGURATION
# =============================================================================
# Mode aplikasi: development atau production
ENVIRONMENT=development

# Debug mode - set ke false untuk production
DEBUG=true

# =============================================================================
#                           LOGGING CONFIGURATION
# =============================================================================
# Level logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Direktori dan file log
LOG_DIR=logs
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
#                           FILE CONFIGURATION
# =============================================================================
# Direktori untuk file uploads, backups, dll
UPLOAD_DIR=uploads
BACKUP_DIR=backups
TEMP_DIR=temp

# Ukuran maksimal file upload (dalam bytes)
MAX_FILE_SIZE=52428800

# =============================================================================
#                           SECURITY CONFIGURATION
# =============================================================================
# Aktifkan autentikasi pengguna
ENABLE_AUTH=true

# Session timeout dalam detik (3600 = 1 jam)
SESSION_TIMEOUT=3600

# Maksimal percobaan login
MAX_LOGIN_ATTEMPTS=5

# Secret key untuk enkripsi (ganti dengan string random yang aman)
SECRET_KEY=gereja-katolik-secret-key-2024-change-this-in-production

# Salt untuk password hashing
PASSWORD_SALT=gereja-salt-change-this-too

# =============================================================================
#                           BACKUP CONFIGURATION
# =============================================================================
# Aktifkan backup otomatis
AUTO_BACKUP=true

# Interval backup dalam detik (86400 = 24 jam)
BACKUP_INTERVAL=86400

# Berapa hari backup disimpan
BACKUP_RETENTION_DAYS=30

# Path ke executable MySQL tools
MYSQLDUMP_PATH=mysqldump
MYSQL_PATH=mysql

# =============================================================================
#                         PRODUCTION SETTINGS
# =============================================================================
# Uncomment dan sesuaikan untuk production

# DEBUG=false
# LOG_LEVEL=WARNING
# AUTO_BACKUP=true
# BACKUP_INTERVAL=21600
# ENABLE_AUTH=true
# SESSION_TIMEOUT=1800

# =============================================================================
#                           DEVELOPMENT SETTINGS
# =============================================================================
# Settings khusus untuk development

# DEBUG=true
# LOG_LEVEL=DEBUG
# DB_NAME=db_gereja_katolik_dev
# SERVER_PORT=9001

# =============================================================================
#                             NOTES
# =============================================================================
# 1. File .env ini harus berada di direktori server/ 
# 2. Jangan commit file .env ke git repository
# 3. Untuk production, gunakan values yang lebih aman untuk SECRET_KEY dan PASSWORD_SALT
# 4. Pastikan direktori yang dikonfigurasi memiliki permission yang tepat
# 5. Test konfigurasi database sebelum deployment